<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="spark_visualizer.visualization.SparkVisualizerController">
   <top>
    <MenuBar BorderPane.alignment="CENTER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem mnemonicParsing="false" text="Open..." />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem mnemonicParsing="false" text="Settings" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" text="Quit" />
          </items>
        </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" text="About Spark Visualizer" />
               </items>
            </Menu>
      </menus>
    </MenuBar>
   </top>
   <bottom>
      <ToolBar>
        <items>
            <Label text="Map" />
            <ComboBox fx:id="map_list" prefWidth="100.0" />
            <Label text="Reduce">
               <padding>
                  <Insets left="20.0" />
               </padding></Label>
            <ComboBox fx:id="reduce_list" prefWidth="100.0" />
            <Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="2.0">
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </Separator>
          <Button mnemonicParsing="false" onAction="#compute" text="Compute" />
            <Button mnemonicParsing="false" onAction="#generate" text="Generate Data" />
            <Label fx:id="zoom_label" text="1.0x">
               <padding>
                  <Insets left="20.0" />
               </padding></Label>
            <Slider fx:id="zoom_slider" blockIncrement="25.0" majorTickUnit="50.0" max="200.0" min="50.0" minorTickCount="25" showTickMarks="true" snapToTicks="true" value="100.0">
               <padding>
                  <Insets right="10.0" />
               </padding></Slider>
            <Separator orientation="VERTICAL">
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </Separator>
            <Button mnemonicParsing="false" onAction="#prevPhase" text="&lt;" />
            <Button graphicTextGap="0.0" mnemonicParsing="false" onAction="#nextPhase" text="&gt;" />
            <Separator orientation="VERTICAL">
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </Separator>
            <Button mnemonicParsing="false" onAction="#reset" text="Reset" />
            <Button mnemonicParsing="false" onAction="#done" text="Done" />
        </items>
      </ToolBar>
   </bottom>
   <center>
      <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="View">
               <content>
                  <ScrollPane fx:id="scrollpane">
                     <content>
                        <Group fx:id="canvas" />
                     </content>
                  </ScrollPane>
               </content>
          </Tab>
          <Tab text="Settings">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.rightAnchor="545.0">
                           <children>
                              <HBox>
                                 <children>
                                    <Label text="Data size:" translateX="10.0" translateY="10.0">
                                       <HBox.margin>
                                          <Insets right="19.0" />
                                       </HBox.margin>
                                    </Label>
                                    <TextField fx:id="dataSize" text="90" translateX="35.0" translateY="5.0">
                                       <HBox.margin>
                                          <Insets />
                                       </HBox.margin>
                                    </TextField>
                                 </children>
                              </HBox>
                              <HBox>
                                 <children>
                                    <Label text="Block Size:" translateX="10.0" translateY="10.0">
                                       <HBox.margin>
                                          <Insets right="13.0" />
                                       </HBox.margin>
                                    </Label>
                                    <TextField fx:id="blockSize" text="2" translateX="35.0" translateY="5.0" />
                                 </children>
                              </HBox>
                              <HBox>
                                 <children>
                                    <Label text="# Executors:" translateX="10.0" translateY="10.0" />
                                    <TextField fx:id="nExecutors" text="4" translateX="35.0" translateY="5.0" />
                                 </children>
                              </HBox>
                              <HBox>
                                 <children>
                                    <Label text="Key Type:" translateX="10.0" translateY="10.0">
                                       <HBox.margin>
                                          <Insets right="13.0" />
                                       </HBox.margin>
                                    </Label>
                                    <ChoiceBox fx:id="keyType" translateX="20.0" translateY="5.0" />
                                 </children>
                              </HBox>
                              <HBox>
                                 <children>
                                    <Label text="Value Type:" translateX="10.0" translateY="10.0" />
                                    <ChoiceBox fx:id="valueType" translateX="20.0" translateY="5.0" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children></AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
